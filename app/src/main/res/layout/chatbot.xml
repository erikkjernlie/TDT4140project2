<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ChatBot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="90" android:paddingTop="5dp" android:paddingBottom="3dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textSize="20dp"
        android:gravity="left"
        android:textColor="@color/back_help_color"
        android:layout_weight="30"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:id="@+id/back"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNIBOT"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/unibot_color"
            android:layout_weight="30"
            android:clickable="true"
            android:id="@+id/unibot"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HELP"
            android:textSize="20dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textColor="@color/back_help_color"
            android:layout_weight="30"
            android:clickable="true"
            android:id="@+id/help"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="7">

        <View android:layout_height="3px"
            android:layout_width="0dp"
            android:background="#a8b2c1"
            android:layout_weight="2"
            />
        <View android:layout_height="3px"
            android:layout_width="0dp"
            android:background="#000000"
            android:layout_weight="3"
            />
        <View android:layout_height="3px"
            android:layout_width="0dp"
            android:background="#a8b2c1"
            android:layout_weight="2"
            />


    </LinearLayout>

    <ListView
        android:id="@+id/msgview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.44"
        android:background="#f9f9f9"
        android:divider="@null"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E5E5E5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#FFFFFF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/msg"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:hint="Ask uniBOT..."
            android:backgroundTint="#67CDFF"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="Send"
            android:padding="10dp"

            android:textColor="#FFFFFF"
            android:background="@drawable/send_button"
            />


    </LinearLayout>


</LinearLayout>